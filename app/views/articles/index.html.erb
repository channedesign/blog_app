<h1>Listing all Articles</h1>
<% if user_signed_in? %>
	<%= link_to 'New Article', new_article_path, class: 'btn btn-default' %>
	<br><br>
<% end %>
<% @articles.each do |article| %>
	<div class='well well-lg'>
		<h1><%= link_to article.title, article_path(article) %></h1>
		<p><%= article.body %></p>
		<div>
			<% if article.user %>
				<small>Created by: <%= article.user.email %></small>
			<% end %>
		</div>
	</div>
<% end %>