<div class="row">
	<div class="col-sm-12">

		<%= simple_form_for(@article, html: { class: 'form-horizontal' }) do |f| %>
			<%= f.input :title, error: "Title can't be blank" %>
			<%= f.input :body, input_html: { rows: 10 }, error: "Body can't be blank" %>
			<%= f.button :submit, class: 'btn btn-primary pull-right' %>
		<% end %>

		
	</div>
</div>